function findElement(arr: number[], element: number) {
    let indexOfElement: number = -1;
    
    for(let i = 0; i< arr.length; i++){
        if(element === arr[i]){
            indexOfElement = i;
            break;
        }
    }
    
    return indexOfElement !== -1? indexOfElement : -1;
}

console.log(findElement([15,40,30,4], 4));
